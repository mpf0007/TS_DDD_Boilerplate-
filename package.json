{
  "name": "clean-architecture-with-typescript-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "npm run build -- --watch",
    "start": "node dist/main/server.js",
    "dev": "nodemon -L --watch ./dist ./dist/main/server.js",
    "up": "concurrently --kill-others-on-fail \"npm run build:watch\" \"docker compose up\"",
    "down": "docker compose down",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:staged": "npm run test -- --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpf0007/TS_DDD_Boilerplate-.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dyarleniber/clean-architecture-with-typescript-api/issues"
  },
  "homepage": "https://github.com/dyarleniber/clean-architecture-with-typescript-api#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@shelf/jest-mongodb": "^4.1.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "concurrently": "^7.4.0",
    "eslint": "8.22.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.0",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "module-alias": "^2.2.2",
    "mongodb": "^4.9.1"
  },
  "_moduleAliases": {
    "@domain": "dist/domain",
    "@application": "dist/application",
    "@infrastructure": "dist/infrastructure",
    "@main": "dist/main"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run test:staged"
    ]
  },
  "engines": {
    "node": "16.x"
  }
}
